meta {
  name: Search Workflows
  type: http
  seq: 22
}

post {
  url: {{baseURL}}/api/operations/search-workflows
  body: json
  auth: inherit
}

body:json {
  {
    "pageIndex": 0,
    "pageSize": 10,
    "sortBy": "definition_id",
    "sortDirection": "asc",
    "definitionId": "test_workflow_definition",
    "status": "active",
    "attributes": [
      {
        "code": "test_workflow_attribute_code",
        "value": "test_workflow_attribute_value"
      },
      {
        "code": "another_workflow_attribute_code",
        "value": "another_workflow_attribute_value"
      }
    ],  
    "externalReferences": [
      {
        "type": "test_external_reference_code",
        "value": "Test External Reference"
      },
      {
        "type": "another_external_reference_code",
        "value": "Another External Reference"
      }
    ],
    "variables": [
      {
        "name": "test_variable_name",
        "value": "Test variable value"
      },
      {
        "name": "another_variable_name",
        "value": "Another variable value"
      }
    ]
  }
}

assert {
  res.status: eq 200
  res.body.workflowSummaries.length: eq 1
  res.body.workflowSummaries[0].id: eq {{workflowId}}
}

settings {
  encodeUrl: true
}
